# Raspberry Pi Frontier - Environment Configuration Example
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================================================
# GENERAL SETTINGS
# ============================================================================

# Application environment (development, production)
APP_ENV=development

# Enable debug mode (true/false)
DEBUG=true

# Demo mode - simulate outposts without real hardware (true/false)
DEMO_MODE=false


# ============================================================================
# RASPBERRY PI OUTPOST CONFIGURATION
# ============================================================================

# Outpost 1 - Fishing Fort
OUTPOST_1_NAME=Fort William
OUTPOST_1_TYPE=fishing
OUTPOST_1_IP=192.168.1.100
OUTPOST_1_API_PORT=8000
OUTPOST_1_SSH_PORT=22
OUTPOST_1_SSH_USER=pi
OUTPOST_1_SSH_PASSWORD=
OUTPOST_1_SSH_KEY_PATH=~/.ssh/id_rsa

# Outpost 2 - Hunting Fort
OUTPOST_2_NAME=Fort Nelson
OUTPOST_2_TYPE=hunting
OUTPOST_2_IP=192.168.1.101
OUTPOST_2_API_PORT=8000
OUTPOST_2_SSH_PORT=22
OUTPOST_2_SSH_USER=pi
OUTPOST_2_SSH_PASSWORD=
OUTPOST_2_SSH_KEY_PATH=~/.ssh/id_rsa

# Outpost 3 - Trading Fort
OUTPOST_3_NAME=Fort Albany
OUTPOST_3_TYPE=trading
OUTPOST_3_IP=192.168.1.102
OUTPOST_3_API_PORT=8000
OUTPOST_3_SSH_PORT=22
OUTPOST_3_SSH_USER=pi
OUTPOST_3_SSH_PASSWORD=
OUTPOST_3_SSH_KEY_PATH=~/.ssh/id_rsa


# ============================================================================
# AUTHENTICATION SETTINGS
# ============================================================================

# JWT Secret Key - CHANGE THIS TO A RANDOM STRING!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this

# JWT Algorithm
JWT_ALGORITHM=HS256

# Token expiration time in minutes
JWT_EXPIRATION_MINUTES=60


# ============================================================================
# DATABASE SETTINGS
# ============================================================================

# SQLite database file paths (on Raspberry Pis)
DB_PATH_FISHING=/home/pi/frontier/fishing_fort.db
DB_PATH_HUNTING=/home/pi/frontier/hunting_fort.db
DB_PATH_TRADING=/home/pi/frontier/trading_fort.db


# ============================================================================
# STREAMLIT CONFIGURATION
# ============================================================================

# Streamlit server settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Theme settings
STREAMLIT_THEME_PRIMARY_COLOR=#1f77b4
STREAMLIT_THEME_BACKGROUND_COLOR=#ffffff
STREAMLIT_THEME_SECONDARY_BACKGROUND_COLOR=#f0f2f6
STREAMLIT_THEME_TEXT_COLOR=#262730


# ============================================================================
# LOGGING SETTINGS
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE_PATH=logs/frontier.log

# Enable API request logging (true/false)
LOG_API_REQUESTS=true


# ============================================================================
# NETWORK SETTINGS
# ============================================================================

# Connection timeout in seconds
CONNECTION_TIMEOUT=10

# Request retry attempts
MAX_RETRIES=3

# Retry delay in seconds
RETRY_DELAY=2


# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# Enable HTTPS for API calls (true/false)
# Note: Requires SSL certificates on Raspberry Pis
ENABLE_HTTPS=false

# SSL certificate verification (true/false)
# Set to false for self-signed certificates (development only)
VERIFY_SSL=false

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,192.168.1.*


# ============================================================================
# ADVANCED SETTINGS
# ============================================================================

# Enable performance monitoring (true/false)
ENABLE_MONITORING=false

# Cache TTL in seconds
CACHE_TTL=300

# Maximum concurrent API requests
MAX_CONCURRENT_REQUESTS=5

# API rate limit (requests per minute)
API_RATE_LIMIT=60
